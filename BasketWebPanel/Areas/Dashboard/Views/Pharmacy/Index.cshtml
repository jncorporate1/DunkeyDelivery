@model BasketWebPanel.ViewModels.PharmacyRequestViewModel

@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="right_col" role="main">
    <div class="row">
        <div class="x_panel">
            <div class="x_title">
                <h3>Pharmacy Request Details</h3>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="x_panel">
                    <div id="accordion" role="tablist" class="row" aria-multiselectable="true">
                        <div class="card">
                            <div class="card-header col-md-12 col-sm-12 col-xs-12 form-group has-feedback" role="tab" id="headingOne">
                                <h4 class="mb-0">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#divPharmacyProducts" aria-expanded="false" aria-controls="collapseOne">
                                        Medicines (@Model.PharmacyProducts.Count)
                                    </a>
                                </h4>
                            </div>
                            @if (Model.PharmacyProducts.Count > 0)
                            {
                                <div id="divPharmacyProducts" class="collapse col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                                    @for (int i = 0; i < Model.PharmacyProducts.Count; i++)
                                    {
                                        <div class="card-body col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                                            <div class="clearfix"></div>
                                            @Html.TextBoxFor(x => Model.PharmacyProducts[i].Name, new { @class = "form-control", @readonly = "true", @style = "width:100%" })
                                        </div>

                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
                @*Doctor's Details*@
                <div class="row col-md-12 col-sm-12 col-lg-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h4>Doctor's Details</h4>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-xs-6 form-group has-feedback">
                                    <label>First Name</label>
                                    @Html.TextBoxFor(x => x.Doctor_FirstName, new { @class = "form-control", @disabled = "true", @style = "width:100%" })
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-6 form-group has-feedback">
                                    <label>Last Name</label>
                                    @Html.TextBoxFor(x => x.Doctor_LastName, new { @class = "form-control", @disabled = "true", @style = "width:100%" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-xs-6 form-group has-feedback">
                                    <label>Phone</label>
                                    @Html.TextBoxFor(x => x.Doctor_Phone, new { @class = "form-control", @disabled = "true", @style = "width:100%" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @*Patients Details*@
                <div class="row col-md-12 col-sm-12 col-lg-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h4>Patients's Details</h4>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-xs-6 form-group has-feedback">
                                    <label>First Name</label>
                                    @Html.TextBoxFor(x => x.Patient_FirstName, new { @class = "form-control", @disabled = "true", @style = "width:100%" })
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-6 form-group has-feedback">
                                    <label>Last Name</label>
                                    @Html.TextBoxFor(x => x.Patient_LastName, new { @class = "form-control", @disabled = "true", @style = "width:100%" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-xs-6 form-group has-feedback">
                                    <label>Date Of Birth</label>
                                    @Html.TextBoxFor(x => x.Patient_DOB, new { @class = "form-control", @disabled = "true", @style = "width:100%" })
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-6 form-group has-feedback">
                                    <label>Gender</label>
                                    <input disabled="true" id="Patient_Gender" class="form-control" style="width:100%" type="text" value="@(Model.Gender == 1? "Male": "False")">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @*Delivery Details*@
                <div class="row col-md-12 col-sm-12 col-lg-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h4>Delivery Details</h4>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-xs-6 form-group has-feedback">
                                    <label>Address</label>
                                    @Html.TextBoxFor(x => x.Delivery_Address, new { @class = "form-control", @disabled = "true", @style = "width:100%" })
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-6 form-group has-feedback">
                                    <label>City</label>
                                    @Html.TextBoxFor(x => x.Delivery_City, new { @class = "form-control", @disabled = "true", @style = "width:100%" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-xs-6 form-group has-feedback">
                                    <label>State</label>
                                    @Html.TextBoxFor(x => x.Delivery_State, new { @class = "form-control", @disabled = "true", @style = "width:100%" })
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-6 form-group has-feedback">
                                    <label>Zip</label>
                                    @Html.TextBoxFor(x => x.Delivery_Zip, new { @class = "form-control", @disabled = "true", @style = "width:100%" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-xs-6 form-group has-feedback">
                                    <label>Phone</label>
                                    @Html.TextBoxFor(x => x.Delivery_Phone, new { @class = "form-control", @disabled = "true", @style = "width:100%" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div>
                @Html.ActionLink("Back to List", "ManagePharmacy")
            </div>
        </div>
    </div>

</div>