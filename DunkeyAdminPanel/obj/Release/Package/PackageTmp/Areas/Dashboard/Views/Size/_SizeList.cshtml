@model BasketWebPanel.Areas.Dashboard.Models.SizeListViewModel

<style>
    .table caption + thead tr:first-child th,
    .table colgroup + thead tr:first-child th,
    .table thead:first-child tr:first-child th,
    .table caption + thead tr:first-child td,
    .table colgroup + thead tr:first-child td,
    .table thead:first-child tr:first-child td {
        border-top: 0;
        text-align: center;
        vertical-align: central;
    }

    .caption {
        background: transparent !important;
    }
  
</style>


<div class="panel-body panel">
    @*@using (Html.BeginForm("ExportProduct", "Product", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="row" style="text-align: right;margin-right: 3px;">
            <button type="submit" class="btn btn-success btn-sm text-right"> <i style="font-size: 15px;" class="fa fa-file-excel-o" aria-hidden="true"></i> Export Data </button>
        </div>
    }*@
    <div class="">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_content">
                    <div class="table-responsive" style="overflow-x:auto; overflow-y:hidden">
                        <table id="datatable" class="table table-striped table-bordered " style="table-layout: auto; text-align:center;">
                            <thead>
                                <tr>
                                    <th class="middled sorting_disabled" style="vertical-align:middle">ID</th>
                                    <th style="vertical-align:middle">Unit Name</th>
                                    <th class="centered" style="vertical-align:middle">Edit</th>
                                    <th class="centered" style="vertical-align:middle">Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var size in Model.SizeList)
                                {
                                    <tr>
                                        <td style="vertical-align:middle">@size.Id</td>
                                        <td id="UnitName_@size.Id" style="vertical-align:middle">@size.Unit</td>
                                        <td class="centered" style="vertical-align:middle"><p data-placement="top" data-toggle="tooltip" style="margin:3px 0px 0px" title="" data-original-title="Edit"><button class="btn btn-primary btn-xs editButtons" data-title="Edit" data-sizeid="@size.Id" data-toggle="modal"><span class="glyphicon glyphicon-pencil"></span></button></p></td>
                                        <td class="centered" style="vertical-align:middle"><p data-placement="top" data-toggle="tooltip" style="margin:3px 0px 0px" title="" data-original-title="Delete"><button class="btn btn-danger btn-xs deleteButtons" data-title="Delete" data-sizeid="@size.Id" data-toggle="modal" data-target="#deleteModal"><span class="glyphicon glyphicon-trash"></span></button></p></td>
                                    </tr>
                                }
                            </tbody>
                        </table>



                     
                    </div>
                </div>
            </div>
        </div>
    </div>
   
</div>


<script>
    $(document).ready(function () {
        $('#datatable').DataTable({
            "pagingType": "full_numbers",
            "columnDefs": [{
                "targets": [2, 3],
                "orderable": false
            }
            ]
        });
    });
</script>