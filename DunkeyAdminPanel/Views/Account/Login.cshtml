@*<body class="login" style="background-repeat:no-repeat; background-size:cover; background-image:url('/Content/images/Logo.jpg')"> *@
<body class="login" style="overflow:hidden">
    <div id="wrap">
        <div id="main" class="container clear-top">
            <div>
                <a class="hiddenanchor" id="signup"></a>
                <a class="hiddenanchor" id="signin"></a>
                <div class="login_wrapper">
                    <div class="animate form login_form">
                        <br />
                        <br />
                        <div class="row">
                            <div class="col-md-3">
                                <img src="~/Content/images/Logo1.png" class="img-responsive" alt="" height="50" width="50" style="float:right">
                            </div>
                            <div class="col-md-9" style="padding-left:0px">
                                <h1 style="float:left; font-size:25px"><i class="fa fa-paw"></i> Dunkey Web Panel</h1>
                            </div>
                        </div>
                        <section class="login_content">
                            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { onsubmit = "onSubmitBegin()", @class = "form-horizontal", role = "form", autocomplete = "off" }))
                            {
                                @Html.AntiForgeryToken()

                                @*<form method="post">  *@
                                <h1>Login Form</h1>
                                <div class="row" style="margin-bottom:10px;">
                                    <input autofocus type="text" data-val="true" style="margin-bottom:0px" class="form-control " placeholder="Username" name="Email" id="Email" value="@Model.Email" data-val-required="Email is required" data-val-email="The email is not a valid e-mail address" />
                                    @*<input class="form-control input-validation-error" data-val="true" data-val-email="The Email field is not a valid e-mail address." data-val-required="The Email field is required."  value="@Model.Email" id="Email" name="Email" type="text">*@
                                    @* @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })*@
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger", style = "float:left" })
                                    @*<br>*@
                                </div>
                                <div class="row" style="margin-bottom:10px;">
                                    @*<input type="password" class="form-control input-validation-error" placeholder="Password"  style="margin-bottom:0px" name="Password" value="@Model.Password" required="" data-val-required="Password is required." />*@
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control input-validation-error", @style = "margin-bottom:0px", @placeholder = "Password" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger", style = "float:left" })
                                    @*<br>*@
                                </div>
                                <div class="row" id="divValidationSummary">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </div>
                                <div class="row">
                                    <input class="btn btn-default btn-md submit" type="submit" style="float: none;margin-left: 0;" href="index.html" value="Log In" />
                                </div>
                                <div class="clearfix"></div>

                                @* </form>*@

                            }
                        </section>
                        <div class="separator">
                            @*<p class="change_link">
                                    New to site?
                                    <a href="#signup" class="to_register"> Create Account </a>
                                </p>*@
                            <div class="clearfix"></div>
                            <br />

                        </div>
                    </div>
                    <div id="register" class="animate form registration_form">
                        <section class="login_content">
                            <form>
                                <h1>Create Account</h1>
                                <div>
                                    <input type="text" class="form-control" placeholder="Username" required="" />
                                </div>
                                <div>
                                    <input type="email" class="form-control" placeholder="Email" required="" />
                                </div>
                                <div>
                                    <input type="password" class="form-control" placeholder="Password" required="" />
                                </div>
                                <div>
                                    <a class="btn btn-default submit" href="index.html">Submit</a>
                                </div>
                                <div class="clearfix"></div>
                                <div class="separator">
                                    <p class="change_link">
                                        Already a member ?
                                        <a class="to_register"> Log in </a>

                                    </p>
                                    <div class="clearfix"></div>
                                    <br />
                                    <div>
                                    </div>
                                </div>
                            </form>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*<footer class="footer">
            <div class="container">
                <p align="right" class="text-muted">Powered by <a href="https://www.ingic.ae/" target="_blank">Ingic</a></p>
            </div>
        </footer>*@
    <footer>
        <div class="pull-right">
            <span style="font-size:15px">Powered by    </span> <a href="https://www.ingic.ae/" target="_blank"><img height="20px" width="70px" src="~/Content/images/ingic.png"></a>
        </div>
        <div class="clearfix"></div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @*@RenderSection("scripts", required: false)*@

</body>
</html>
<script>
    function onSubmitBegin() {
        $("#divValidationSummary").empty();
    }
</script>
