
@model  BasketWebPanel.BindingModels.SearchBlogModel
<div class="panel-body panel">
    <div class="row">
        <div class="row" style="margin-left:6px; margin-right:6px">
            <div class="col-md-4 col-sm-12 col-xs-12">
                <div class="form-group form-inline  ">
                    <label class="control-label" for="BlogTitle" title="">Blog Title</label>
                    <span class="ico-help" title="Search by a Blog's Title'"><i class="fa fa-question-circle"></i></span>
                    <input class="form-control " id="BlogTitle" name="BlogTitle" type="text" value="">
                </div>
            </div>
            <div class="col-md-4 col-sm-12 col-xs-12">
                <div class="form-group form-inline ">
                    <label class="control-label" for="CategoryType" title="">Category Type</label>
                    <span class="ico-help" title="Search by a category type"><i class="fa fa-question-circle"></i></span>
                    @*<input class="form-control text-box single-line " id="CategoryType" name="CategoryType" type="text" value="">*@
                    <select class="form-control text-box single-line"  id="CategoryType" name="CategoryType" >
                        <option value="">Select Type</option>
                        <option value="Food">Food</option>
                        <option value="Grocery">Grocery</option>
                        <option value="Laundry">Laundry</option>
                        <option value="Alcohol">Alcohol</option>
                        <option value="Retail">Retail</option>

                    </select>
                </div>
            </div>
            <div class="form-group form-inline ">
                <div class="col-md-4 col-sm-12 col-xs-12">
                    <label class="control-label" for="DateOfPosting" title="">Posted Date</label>
                    <span class="ico-help" title="Search by date on which post is posted"><i class="fa fa-question-circle"></i></span>
                    <div class='input-group date'>
                        <input type='text' class="form-control " id="datetimepicker2" name="DateOfPosting" />
                        <span class="input-group-addon open-datetimepicker2">
                            <span class="glyphicon glyphicon-calendar "></span>
                        </span>
                    </div>
                </div>
            </div>

        </div>

    </div>
    <div class="row">
        <div class="col-md-7 col-md-offset-5">
            <button type="button" id="search-customers" class="btn btn-primary btn-search" onclick="OnSubmit()">
                <i class="fa fa-search"></i>
                Search
            </button>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/jquery")

<script>
    function OnSubmit() {
        var url = '@Url.Action("SearchBlogResults", "Blog")';
        $('#tblSearchResult').load(url, { BlogTitle: $("#BlogTitle").val(), DateOfPosting: $("#datetimepicker2").val(), CategoryType: $('#CategoryType').find(":selected").val() });
        $("#divLoader").hide();
    }
</script>