<div class="panel-body panel">
    <div class="">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_content">
                    <div class="table-responsive" style="overflow-x:auto; overflow-y:hidden">
                        <table id="datatable" class="table table-striped table-bordered" style="table-layout: auto; text-align:center;">
                            <thead>
                                <tr>
                                    @*<th  class="middled" style="vertical-align:middle"><input id="mastercheckbox" type="checkbox"></th>*@
                                    <th style="vertical-align:middle">ID</th>
                                    <th style="vertical-align:middle">Question</th>
                                    <th style="vertical-align:middle">Answer</th>
                                    <th style="vertical-align:middle">Type</th>

                                    <th class="centered" style="vertical-align:middle">Edit</th>
                                    <th class="centered" style="vertical-align:middle">Delete</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var faq in Model.FAQs)
                                {
                                    <tr>
                                        @*<td style="vertical-align:middle"><input id="mastercheckbox" type="checkbox"></td>*@
                                        <td style="vertical-align:middle">@faq.Id</td>
                                        <td style="vertical-align:middle">@faq.Question</td>
                                        <td style="vertical-align:middle">@faq.Answer</td>
                                        <td style="vertical-align:middle">@faq.Type</td>
       
                                      
                                        <td class="centered" style="vertical-align:middle"><p data-placement="top" data-toggle="tooltip" style="margin:3px 0px 0px" title="" data-original-title="Edit"><button class="btn btn-primary btn-xs editButtons" data-title="Edit" data-faqid="@faq.Id" data-toggle="modal"><span class="glyphicon glyphicon-pencil"></span></button></p></td>
                                        <td class="centered" style="vertical-align:middle"><p data-placement="top" data-toggle="tooltip" style="margin:3px 0px 0px" title="" data-original-title="Delete"><button class="btn btn-danger btn-xs deleteButtons" data-title="Delete" data-faqid="@faq.Id" data-toggle="modal" data-target="#deleteModal"><span class="glyphicon glyphicon-trash"></span></button></p></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        @Scripts.Render("~/bundles/jquery")
                        <script>
                            $(document).on("click", ".deleteButtons", function () {
                                var faqid = $(this).data('faqid');
                                $("#faqid").val(faqid);
                            });

                            $(document).on("click", ".editButtons", function () {
                                var faqid = $(this).data('faqid');
                                var url = '@Url.Action("FAQ", "Content", new { Id = "__id__" })';
                                window.location.href = url.replace('__id__', faqid);
                            });

                            $(document).ready(function () {
                                $('#datatable').DataTable({
                                    "pagingType": "full_numbers",
                                    "columnDefs": [{
                                        "targets": [1],
                                        "orderable": false
                                    }
                                    ]
                                });
                            });
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*/////DeletePopUp*@
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <input type="hidden" id="faqid" value="" />
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" id="btnDeleteClose" class="close" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                    <h4 class="modal-title custom_align" id="Heading">Delete this entry</h4>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span>Are you sure you want to delete this Admin?</div>
                    <label id="lblErrorOnDelete" hidden class="text-danger"></label>
                </div>
                <div class="modal-footer ">
                    <button type="button" id="btnDeleteYes" class="btn btn-success"><span class="glyphicon glyphicon-ok-sign"></span>&nbsp;Yes</button>
                    <button type="button" id="btnDeleteNo" class="btn btn-default"><span class="glyphicon glyphicon-remove"></span>&nbsp;No</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</div>

<script>
    $('#btnDeleteNo').on("click", function (e) {
        $('#deleteModal').modal('hide');
        var lblError = $("#lblErrorOnDelete");
        lblError.text("");
        lblError.hide();
    });

    $('#btnDeleteClose').on("click", function (e) {
        $('#deleteModal').modal('hide');
        var lblError = $("#lblErrorOnDelete");
        lblError.text("");
        lblError.hide();
    });

    $('#btnDeleteYes').on("click", function (e) {
        var faqid = $("#faqid").val();
        var url = '@Url.Action("DeleteFAQ", "Content")';
        var lblError = $("#lblErrorOnDelete");
        $.get(url, { Id: faqid }, function (data) {
            if (data == "Success") {
                $('#deleteModal').modal('hide');
                $(".modal-backdrop").fadeOut('slow', function () {
                    var table = $('#datatable').DataTable();

                    var indexes = table.rows().eq(0).filter(function (rowIdx) {
                        return table.cell(rowIdx, 0).data() === faqid ? true : false;
                    });
                    table.rows(indexes).remove().draw(false);
                });
                lblError.text("");
                lblError.hide();
            }
            else {
                lblError.text(data);
                lblError.show();
            }
        });
    });
</script>