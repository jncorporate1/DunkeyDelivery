@model DunkeyDelivery.Areas.User.Models.NewPassword
@{

    Layout = "~/Areas/User/Views/Shared/_BannerLayout.cshtml";
}
<div class="main-section login-main-section greybg">
    <div class="container">
        <div class="row">
            <p>
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin ornare ullamcorper volutpat. Orci varius natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Nulla congue, dolor in porttitor efficitur, ante lacus bibendum velit, eu placerat est nibh quis velit. Sed pulvinar eros nec lectus pretium, sed auctor ligula ultricies.
                <div class="col-md-6 padleft">
                    @using (Ajax.BeginForm("ResetPasswordSubmit", "Home", new AjaxOptions { OnSuccess = "customSuccessMessage", OnFailure = "OnFailedInsertion" }))
                    {


                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Password, new { name = "Password", @class = "form-control", id = "form-inputs", @placeholder = "New Password", @autocomplete = "off", @type = "password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger error" })
                        </div>
                        <div class="form-group" style="margin-bottom:10px;">
                            @Html.TextBoxFor(x => x.ConfirmPassword, new { name = "ConfirmPassword", @class = "form-control", id = "form-inputs", @placeholder = "Confirm Password", @autocomplete = "off", @type = "password" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger error" })
                        </div>
                        <input type="text" value="@ViewBag.Code" name="Code" hidden />
                                                 <!-- Response Messages -->
                        <div id="SuccessNotifications" style="display:none;">
                <p id="ModalNotification" style="color:green;">Password changed successfully!.</p>

            </div>
            <div style="color:red;" class="alert alert-error" id="error-alert" hidden>

                <span style="float:left;"></span>
            </div>
                        <!-- Response Messages close -->
                        <button type="submit" class="btn-submit btn-login">Reset Password</button>

                    }
                </div>
     
        </div>
    </div>
</div>

