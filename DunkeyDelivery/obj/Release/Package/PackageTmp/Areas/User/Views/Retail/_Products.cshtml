@model DunkeyDelivery.Areas.User.Models.AlcoholProductVM


<div class="quick-search clearfix" style="border: 1px solid #666666;">
    <form method="" onsubmit="return false;">
        <input type="text" placeholder="Quick search" style="height: 70px;" />
        <input type="submit" />
    </form>
</div>


<div class="row">
 
    <div class="col-md-12">

        <div class="tab">


            <div class="categories-clasify clearfix">
                @if (!string.IsNullOrEmpty(Model.Name))
            {
                    <h3>
                        @Model.Name
                    </h3>
                }
                else
                {
                    <h3>
                        Categories
                    </h3>
                }
                <ul>
                    @if (Model.productslist.Count != 0)
                    {
                        foreach (var product in Model.productslist)
                        {
                            <li class="addCart" id="addCart" storeBusinessTypeTax="@Model.shopViewModel.BusinessTypeTax" storeBusinessType="@Model.shopViewModel.BusinessType" ProductId='@product.Id' storeName="@Model.shopViewModel.BusinessName" onclick="AddToCart('@product.Id', '@product.Name', '@product.Price', '@product.Size','@product.Store_id')">@product.Name <span>$@product.Price</span></li>

                        }
                    }
                    else
                    {
                        <li>No Product(s) Found</li>
                    }

                </ul>
            </div>

        </div>

    </div>





</div>
